{
    "name": "oni",
    "version": "0.0.0",
    "description": "API used by Kusanagi api to get posts. Its job is to authorize requests to data sources and perform CRUD operations entries. It is also scheduled to fetch from data sources.",
    "author": "tayana jacques. tay@erratik.ca",
    "scripts": {
        "build": "tsc",
        "format": "prettier --write \"**/*.ts\"",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "serve": "node dist/main.js",
        "start": "npm run build && npm run serve",
        "start:local": "npm run build && docker-compose up",
        "oni:watch": "nodemon --exec \"docker-compose restart oni\" -w \"dist/**/*.js\" -i \"src/**/*.js.map\"",
        "test": "jest --runInBand --forceExit",
        "test:watch": "jest --watch --runInBand --forceExit",
        "test:cov": "jest --coverage --runInBand --forceExit",
        "deploy:prod": "git push origin --tags $TAG",
        "mongo:dump": ". ./scripts/mongo.dump.sh -c mongodb-geisha -db datawhore --network oni_mongo_net"
    },
    "dependencies": {
        "@nestjs/common": "^5.3.0",
        "@nestjs/core": "^5.3.0",
        "@nestjs/jwt": "^0.1.3",
        "@nestjs/mongoose": "^5.2.2",
        "@nestjs/passport": "^5.1.0",
        "@nestjs/swagger": "2.5.1",
        "@types/crypto-js": "^3.1.43",
        "@types/mongodb": "^3.1.22",
        "@types/passport": "^1.0.0",
        "bluebird": "^3.5.3",
        "body-parser": "^1.18.3",
        "btoa": "^1.2.1",
        "connect-redis": "^3.4.1",
        "cookie-parser": "^1.4.4",
        "crypto-js": "^3.1.9-1",
        "dot-prop": "^5.1.1",
        "express-flash": "^0.0.2",
        "express-session": "^1.16.2",
        "google-fit-activity-types": "^0.1.0",
        "googleapis": "39",
        "joi": "^14.3.1",
        "log": "~1.4.0",
        "moment": "^2.24.0",
        "mongoose": "5.2.1",
        "mongoose-paginate": "^5.0.3",
        "morgan": "^1.9.1",
        "node-schedule": "^1.3.2",
        "oauth": "^0.9.15",
        "passport": "^0.4.0",
        "passport-http-bearer": "^1.0.1",
        "passport-jwt": "^4.0.0",
        "passport-local-mongoose": "^5.0.1",
        "passport-spotify": "^1.0.1",
        "redis": "2.8.0",
        "redlock": "^3.1.2",
        "reflect-metadata": "0.1.12",
        "request": "^2.88.0",
        "rxjs": "^6.4.0",
        "swagger-ui-express": "^4.0.6",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "@nestjs/testing": "5.2.0",
        "@types/bluebird": "~3.5.24",
        "@types/express": "4.16.0",
        "@types/jest": "~23.1.4",
        "@types/mongoose": "^5.3.21",
        "@types/nock": "9.3.0",
        "@types/node": "~10.5.1",
        "@types/redis": "~2.8.6",
        "@types/redlock": "^3.0.2",
        "@types/request-promise": "4.1.41",
        "@types/supertest": "2.0.4",
        "@types/uuid": "3.4.3",
        "jest": "^23.3.0",
        "nock": "^9.4.1",
        "nodemon": "1.17.5",
        "prettier": "^1.13.7",
        "pretty-quick": "^1.10.0",
        "superagent": "^3.8.3",
        "supertest": "^3.1.0",
        "ts-jest": "^23.0.0",
        "ts-loader": "^4.4.2",
        "ts-node": "^6.0.0",
        "tsconfig-paths": "^3.4.2",
        "tslint": "^5.9.1",
        "tslint-config-airbnb": "^5.9.2",
        "typescript": "^3.3.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".(spec|test).ts$",
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/docker-compose/"
        ],
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "setupTestFrameworkScriptFile": "./jestConfig.js",
        "coverageDirectory": "./coverage"
    }
}
